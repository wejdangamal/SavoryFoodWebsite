@model category
@{
    ViewData["Title"] = "Edit";
    Layout = "_Dashboard";
}
<div class="container">
    <div class="row">
        <h1>Edit Category</h1>
        <div class="col-sm-6">
            <form asp-action="Edit" asp-controller="category" method="post">
                <div class="form-group">
                    <input asp-for="category_ID" class="form-control" hidden>
                </div>
                <div class="form-group">
                    <label for="category_name" class="text-danger my-3">Name</label>
                    <input asp-for="category_name" class="form-control">
                </div>
                <input type="submit" value="Edit" class="btn btn-block my-2 btn-danger">
            </form>
        </div>
    </div>
</div>