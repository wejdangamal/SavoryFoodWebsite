@{
    int? Id = Context.Session.GetInt32("Id");
    FoodDBContext db = new FoodDBContext();
    int? count = db.categories.Count();
    int? countProduct = db.products.Count();
    int? countUsers = db.customers.Count();
}
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
